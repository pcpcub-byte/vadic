  },
  "dependencies": {
    "@elysiajs/cors": "^1.3.3",
    "@elysiajs/static": "^1.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/multer": "^2.0.0",
    "bcrypt": "^5.1.1",
    "dropbox": "^10.34.0",
    "elysia": "^1.3.5",
    "mongoose": "^8.16.4",
    "multer": "^2.0.2",
    "razorpay": "^2.9.6"
  }
}
